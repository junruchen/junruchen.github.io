// box-sizing，不直接对所有元素设置
.uniform-box-sizing {
  &,
  *,
  *:before,
  *:after {
    box-sizing: border-box
  }
}

// Body reset
html {
  width 100%
  height 100%
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

body {
  position relative
  width 100%
  height 100%
  font-family $font-family-base
  color $--color-text-regular
  background-color $--background-color-base
  font-size 12px
}

// 重设form表单元素
input,
button,
select,
textarea {
  padding: 0;
  outline: none;
  font-family: inherit;
  font-size: inherit;
  line-height: inherit;
}
input[placeholder], textarea[placeholder] {
  color $--color-text-placeholder
}

input::-moz-placeholder, textarea::-moz-placeholder {
  color $--color-text-placeholder
}

input:-ms-input-placeholder, textarea:-ms-input-placeholder {
  color $--color-text-placeholder
}

input::-webkit-input-placeholder, textarea::-webkit-input-placeholder {
  color $--color-text-placeholder
}
.el-input input, .el-textarea textarea {
  color $--color-text-regular
}

// Horizontal rules
hr {
  border: 0;
  border-top: 1px solid;
}

// Headings，不直接对h标签设置
// -------------------------

h1, h2, h3, h4, h5, h6 {
  font-family: inherit;
  font-weight: 400;
  color: inherit;
  margin: 0;
  small,
  .small {
    font-weight: normal;
    color: inherit;
  }
}

h1,
h2,
h3 {
  small,
  .small {
    font-size: 65%;
  }
}

h4,
h5,
h6 {
  small,
  .small {
    font-size: 75%;
  }
}

h1 {
  font-size: 22px;
}

h2 {
  font-size: 20px;
}

h3 {
  font-size: 18px;
}

h4 {
  font-size: 16px;
}

h5 {
  font-size: 14px;
}

h6 {
  font-size: 12px;
}

// Lists
// -------------------------

// Unordered and Ordered lists
ul,
ol {
  padding 0
  margin-top: 0;
  margin-bottom: 0;
}

li {
  list-style none
}

// List options

.list-unstyled {
  padding-left: 0;
  list-style: none;
}

// 行内元素
.list-inline {
  @extend .list-unstyled;

  > li {
    display: inline-block;
  }
}

// Links
a {
  color $--color-primary
  &,
  &:link,
  &:visited {
    cursor: pointer;
    text-decoration: none;
  }
  &:hover,
  &:active {
    color $--color-primary-hover
    text-decoration: none;
  }
}
